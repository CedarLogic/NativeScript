{
    "compilerOptions": {
        "noEmitOnError": true,
        "noEmitHelpers": true,
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitUseStrict": true,
        "experimentalDecorators": true,
        "jsx": "react"
    },
    "exclude": [
        "node_modules",
        "tests/node_modules",
        "tests/platforms",
        "bin",
        "build",
        "Deploy",
        "out",
        "obj"
    ]
}
